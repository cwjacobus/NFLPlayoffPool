<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<constant name="struts.devMode" value="true" />
   <package name="nflplayoffspool" extends="struts-default">
      <action name="manageGames" 
            class="actions.ManageGamesAction" 
            method="execute">
            <result name="success">/ManageGames.jsp</result>
      </action>
      <action name="updateScore" 
            class="actions.UpdateScoreAction" 
            method="execute">
            <result name="success">/ManageGames.jsp</result>
      </action>
      <action name="getStandings" 
            class="actions.GetStandingsAction" 
            method="execute">
            <result name="success">/Standings.jsp</result>
      </action>
      <action name="import" 
            class="actions.ImportAction" 
            method="execute">
            <result name="success">/ImportResults.jsp</result>
            <result name="error">/ErrorPage.jsp</result>
      </action>
   </package>
</struts>